@page
@inject IHttpContextAccessor Accessor
@model PRN221_Project_Blog.Pages.Blogs.SingleModel
@{
    Layout = null;
    var blog = Model.SinglePost;
    var currentUser = @Accessor.HttpContext.Session.GetString("CurrentUser");
    var username = @Accessor.HttpContext.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description"
          content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">
    <!-- title -->
    <title>@blog.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="assets/img/favicon.png">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">   
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/assets/css/bootstrap-min.css">
    <!-- owl carousel -->
    <link rel="stylesheet" href="~/assets/css/carousel.css">
    <!-- animate css -->
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="~/assets/css/meanmenu.css">
    <!-- main style -->
    <link rel="stylesheet" href="~/assets/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <!-- footer -->
    <link rel="stylesheet" href="~/assets/css/footer-styles.css">
</head>

<style>
    .submit-btn {
        background-color: #F28123;
        color: #051922;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 15px;
        border: none !important;
        cursor: pointer;
        padding: 15px 25px;
        border-radius: 23px;
    }
    .comment-text-body p {
        font-size: 14px;
    }
</style>

<body>
    <!-- header -->
    <div id="sticker-sticky-wrapper" class="sticky-wrapper is-sticky" style="height: 85px;">
        <div class="top-header-area" id="sticker">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-sm-12 text-center">
                        <div class="main-menu-wrap">
                            <!-- logo -->
                            <div class="site-logo">
                                <a href="/home">
                                    <img src="~/assets/img/logo.png" alt="logo">
                                </a>
                            </div>
                            <!-- logo -->
                            <!-- menu start -->
                            <nav class="main-menu">
                                <ul>
                                    <li class="current-list-item"><a href="/home">Home</a></li>
                                    <li>
                                        <a href="/blogs">Recipes</a>
                                        <ul id="cate-menu" class="sub-menu">
                                            @foreach(var cate in Model.listCate)
                                            {
                                                <li><a href="/blogs/category?cateid=@cate.Id">@cate.Category1</a></li>
                                            }
                                        </ul>
                                    </li>
                                    <li><a href="/videos">Recommended videos</a></li>
                                    <li class="log">
                                        <div style="color: whitesmoke">
                                            @if (currentUser != null)
                                            {
                                                <a href="#">@username</a>
                                                <ul class="sub-menu" style="width: 100px">
                                                    <li>
                                                        <a href="/home" onclick="LogoutAccount()">Logout</a>
                                                    </li>

                                                </ul>
                                            }
                                            else
                                            {
                                                <a href="/login">Login</a>
                                            }

                                        </div>
                                    </li>
                                </ul>
                            </nav>
                            <a class="mobile-show search-bar-icon" href="#"><i class="fas fa-search"></i></a>
                            <div class="mobile-menu"></div>
                            <!-- menu end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end header -->

    <input value="@blog.Id" name="blogid" hidden />

    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <input type="text" value="" id="userinfo" hidden>
                        <p>@blog.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->

    <!-- single article section -->
    <div class="mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="single-article-section">
                        <div class="single-article-text">
                            <h2>@blog.Title</h2>
                            <p>@blog.Content</p>
                        </div>
                        <!-- comment section -->
                        <div class="comments-list-wrap">
                            <h3 class="comment-count-title">Comments</h3>
                            <div class="comment-list">
                                <div class="single-comment-body">
                                    <div class="comment-text-body">
                                        <h4>
                                            Jenny Joe <span class="comment-date">Aprl 26, 2020</span> <a href="#">reply</a>
                                        </h4>
                                        <p>
                                            Nunc risus ex, tempus quis purus ac, tempor consequat ex. Vivamus sem magna,
                                            maximus at est id, maximus aliquet nunc. Suspendisse lacinia velit a eros
                                            porttitor, in interdum ante faucibus Suspendisse lacinia velit a eros porttitor,
                                            in interdum ante faucibus.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="comment-template">
                            <h4>Leave a comment</h4>
                            <form method="post">
                                <p><textarea asp-for="CommentPost.CommentContent" cols="30" rows="10" placeholder="Comment here"></textarea></p>
                                <p>
                                    <button class="submit-btn">Submit</button>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="sidebar-section">
                        <div class="recent-posts">
                            <h4>Recent Posts</h4>
                            <ul>
                                <li><a href="single-post.html">You will vainly look for fruit on it in autumn.</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end single article section -->

    <!-- footer -->
    <div class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box about-widget">
                        <h2 class="widget-title">About</h2>
                        <p>
                            As an avid food-maker and a person who loves helping others, I decided to create this blog in order to support all the people that are struggling with cooking because it can be really fun and easy.<br>
                            So grab a knife and let's get started, shall we?
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box get-in-touch">
                        <h2 class="widget-title">Get in Touch</h2>
                        <ul>
                            <li>Phone: 1122334455</li>
                            <li>Email: support@fruitkha.com</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box pages">
                        <h2 class="widget-title">Pages</h2>
                        <ul>
                            <li><a href="/home">Home</a></li>
                            <li><a href="/blogs">Recipes</a></li>
                            <li><a href="/tips">Tips</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box subscribe">
                        <h2 class="widget-title">Tell me what you think</h2>
                        <p>Speak your thoughts here.</p>
                        <form>
                            <input class="review" type="text" placeholder="Name" required>
                            <input class="review" type="text" placeholder="Job(optional)">
                            <textarea placeholder="Your message" required></textarea>
                            <button type="button"><i class="fas fa-paper-plane"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end footer -->

    <script>
        function LogoutAccount(){
            alert("you have logged out");
            Session.Remove("CurrentUser");
            //HttpContext.Session.Remove("Username");
        }
    </script>

        
</body>
</html>

